{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es5", "es6", "dom" ],
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "strictNullChecks": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
